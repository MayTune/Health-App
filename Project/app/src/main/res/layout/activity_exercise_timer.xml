<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aishwarya.project.ExerciseTimer"
    android:background="@drawable/back5">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textColor="#0e0e0e"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hrs"
        android:hint="Hrs"
        android:textSize="24dp"
        android:textColor="#0e0e0e"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mins"
        android:hint="Mins"
        android:textSize="24dp"
        android:textColor="#0e0e0e"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/timer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secs"
        android:hint="Secs"
        android:textSize="24dp"
        android:layout_alignTop="@+id/mins"
        android:layout_alignEnd="@+id/textView1"
        android:textColor="#0e0e0e"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":"
        android:id="@+id/textView4"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/hrs"
        android:layout_toEndOf="@+id/hrs"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":"
        android:id="@+id/textView5"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/mins"
        android:layout_toStartOf="@+id/secs"
        android:textStyle="bold"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/timer"
        android:background="#f667e8"
        android:layout_below="@+id/mins"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/exercise"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/secs"
        android:textColor="#216415"
        android:textStyle="bold"/>

</RelativeLayout>
